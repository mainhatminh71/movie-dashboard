{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\s\\((\\d+|\\d+,\\d+),(\\d+|\\d+,\\d+)\\):\\s(.*)$",
          "file": 1,
          "location": 2,
          "line": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Compiled successfully.*|.*Compiled with errors.*|.*Application bundle generation complete.*"
        }
      }
    }
  ]
}

